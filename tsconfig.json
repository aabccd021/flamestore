{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "keyofStringsOnly": true
  },
  "compileOnSave": true,
  "exclude": [
    "lib",
    "node_modules",
    "temp",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}