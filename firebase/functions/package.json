{
  "name": "functions",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "build": "tsc",
    "dev:no-seed": "npm run build && firebase emulators:start --only functions,firestore",
    "dev": "npm run build && firebase emulators:start --only functions,firestore --import=../firestore/seed",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --exit -r ts-node/register tests/**/*.ts",
    "test-watch": "mocha --watch -r ts-node/register tests/**/*.ts"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.0",
    "flamestore": "../.."
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "firebase-functions-test": "^0.2.0",
    "mocha": "^8.1.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.0.0",
    "tslint": "^5.12.0",
    "tslint-etc": "^1.13.9",
    "typescript": "^3.9.7"
  },
  "private": true
}